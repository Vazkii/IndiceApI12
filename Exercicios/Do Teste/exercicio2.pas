Program Area_trapezio ;
var a,B,m,h:real ;
 Begin
      Writeln('Introduz o valor da base maior');
      Read(B);
      Writeln('Introduz o valor da base menor');
      Read(m);
      Writeln('Introduz o valor da altura');
      Read(h);
      a:=((B+m)*h)/2;
      Writeln('A área do trapezio é ', a);
 End.
